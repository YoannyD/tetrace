<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- inherit project form view -->
        <record id="view_project_product_assignation_form_inherit" model="ir.ui.view">
            <field name="name">view_project_product_assignation_form_inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="equipment" string="Equipments">
                        <field name="id" invisible="1"/>
                        <field name="assignation_ids" nolabel="1" context="{'default_project_id': id}">
                            <tree editable="bottom">
                                <field name="name" readonly="1" force_save="1"/>
                                <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="project_id" invisible="1"/>
                                <field name="product_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="quantity" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="picking_id" readonly="1" force_save="1"/>
                                <field name="state" readonly="1" force_save="1"/>
                                <button name="action_approved" type="object" string="Approve" class="btn-primary"
                                        states="draft"/>
                                <button name="action_open_assignations" type="object" string="Assignations"
                                        icon="fa-list" states="approved"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>