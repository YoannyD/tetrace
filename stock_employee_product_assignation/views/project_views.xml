<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- inherit project form view -->
        <record id="view_project_product_assignation_form_inherit" model="ir.ui.view">
            <field name="name">view_project_product_assignation_form_inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="equipment" string="Equipments">
                        <field name="id" invisible="1"/>
                        <field name="assignation_ids" nolabel="1" context="{'default_project_id': id}">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="project_id" invisible="1"/>
                                <field name="product_id"/>
                                <field name="employee_id" />
                                <field name="warehouse_location"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>