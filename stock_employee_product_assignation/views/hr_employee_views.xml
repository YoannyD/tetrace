<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- inherit employee form view -->
        <record id="view_hr_employee_product_assignation_form_inherit" model="ir.ui.view">
            <field name="name">view_hr_employee_product_assignation_form_inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="action_open_equipments" class="o_stat_button" icon="fa-cubes" type="object">
                        <field name="assignation_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>