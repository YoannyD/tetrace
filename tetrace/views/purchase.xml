<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="purchase_order_form">
        <field name="name">purchase.order.form.tetrace</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
<!--                <field name="partner_user_id" invisible="1"/>-->
<!--                <field name="validation_user_ids" invisible="1"/>-->
                <field name="validacion_id"/>
            </xpath>

            <xpath expr="//field[@name='account_analytic_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
