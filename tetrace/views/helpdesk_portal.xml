<odoo>
    <record id="helpdesk_ticket_portal_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.portal.tetrace</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.tickets_followup"/>
        <field name="arch" type="xml">
          <xpath expr="//span[@t-field='ticket.create_date']" position="after">          
            <field name="puesto"/>
            <field name="departamento"/>
            <field name="fecha_resuelto"/>
            <field name="fecha_validado"/>
            <field name="fecha_limite"/>            
            <field name="dias_delay_tic"/>
            <field name="dias_comprobacion"/>
            <field name="dias_totales"/>
            <field name="dias_delay_user"/>
            <field name="dias_tic"/>
          </xpath>
        </field>
    </record>
</odoo>