<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tetrace_skill_type_action" model="ir.actions.act_window">
        <field name="name">Tipos de habilidades</field>
        <field name="res_model">tetrace.skill.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_applicant_resources_configuration_skill"
              name="Solicitudes"
              parent="hr_recruitment.menu_hr_recruitment_configuration"
              sequence="4"
              groups="base.group_no_one"/>

    <menuitem id="tetrace_skill_type_menu"
              name="Tipos"
              action="tetrace_skill_type_action"
              parent="menu_applicant_resources_configuration_skill"
              sequence="3"
              groups="base.group_no_one"/>

    <record id="tetrace_skill_view_form" model="ir.ui.view">
        <field name="name">tetrace.skill.form</field>
        <field name="model">tetrace.skill</field>
        <field name="arch" type="xml">
            <form string="Habilidades">
                <sheet>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tetrace_skill_type_view_tree" model="ir.ui.view">
        <field name="name">tetrace.skill.type.tree</field>
        <field name="model">tetrace.skill.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de hablidades">
                <field name="name"/>
                <field name="skill_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="tetrace_skill_level_view_tree" model="ir.ui.view">
        <field name="name">tetrace.skill.level.tree</field>
        <field name="model">tetrace.skill.level</field>
        <field name="arch" type="xml">
            <tree string="Niveles de habilidades">
                <field name="name"/>
                <field name="level_progress" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="tetrace_skill_type_view_form" model="ir.ui.view">
        <field name="name">tetrace.skill.type.form</field>
        <field name="model">tetrace.skill.type</field>
        <field name="arch" type="xml">
            <form string="Tipos de habilidades">
                <field name="id" invisible="1"/>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Skill Type" required="True"/>
                        </h1>
                    </div>
                    <group string="Habilidades">
                        <field name="skill_ids" nolabel="1" context="{'default_skill_type_id': id}">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Niveles">
                        <field name="skill_level_ids" nolabel="1" context="{'default_skill_type_id': id}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="applicant_skill_view_form" model="ir.ui.view">
        <field name="name">tetrace.applicant.skill.form</field>
        <field name="model">tetrace.applicant.skill</field>
        <field name="arch" type="xml">
            <form string="Habilidades">
                <sheet>
                    <group>
                        <group>
                            <field name="skill_type_id"/>
                            <field
                                name="skill_id"
                                domain="[('skill_type_id', '=', skill_type_id)]"
                                options="{'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="skill_level_id" domain="[('skill_type_id', '=', skill_type_id)]"/>
                            <field name="level_progress" widget="progressbar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
