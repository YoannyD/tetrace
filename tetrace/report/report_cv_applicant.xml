<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report id="action_report_curriculum_applicant"
            string="Currículum Tetrace"
            model="hr.applicant"
            report_type="qweb-pdf"
            file="tetrace.report_hr_employee_curriculum_applicant"
            name="tetrace.report_hr_employee_curriculum_applicant"
            menu="True"
    />
      
    <report id="action_report_curriculum_applicant_name"
            string="Currículum Tetrace Nombre"
            model="hr.applicant"
            report_type="qweb-pdf"
            file="tetrace.report_hr_employee_curriculum_applicant_name"
            name="tetrace.report_hr_employee_curriculum_applicant_name"
            menu="True"
    />
   <template id="report_hr_employee_curriculum_applicant_name">
          <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="applicant">
                    <div class="row" style="margin:0px auto 32px auto;width:95%;padding-right:20px;float:right;clear:both;">
                    <div t-if="applicant.name" class="col-auto mw-100 mb-2">
                    <strong>Nombre del Solicitante:</strong>
                    <p class="m-0" t-field="applicant.name"/>
                </div>
                           <div t-if="applicant.email_from" class="col-auto mw-100 mb-2">
                    <strong>Correo:</strong>
                    <p class="m-0" t-field="applicant.email_from"/>
                </div>
                           <div t-if="applicant.partner_phone" class="col-auto mw-100 mb-2">
                    <strong>Teléfono:</strong>
                    <p class="m-0" t-field="applicant.partner_phone"/>
                </div>
                    <div t-if="applicant.partner_mobile" class="col-auto mw-100 mb-2">
                    <strong>Móvil:</strong>
                    <p class="m-0" t-field="applicant.partner_mobile"/>
                </div>
  
                        
                    </div>
                    <div class="row" style="margin:40px auto 32px auto;width:95%;padding-right:20px;float:right;clear:both;">
          <strong><span>EDUCACIÓN:</span></strong><br/>
                       <strong>Título:</strong>   
        <span><t t-esc="applicant.type_id.name"/></span><br/>
                           </div>
        <div class="row" style="margin:40px auto 32px auto;width:95%;padding-right:20px;float:right;clear:both;">
          <strong><span>FORMACIÓN COMPLEMENTARIA:</span></strong><br/>
               <t t-foreach="docs.categ_ids" t-as="x">
        <span><t t-esc="x.name"/></span><br/>
                    </t>        
                           </div>
                     <div class="row" style="margin:40px auto 32px auto;width:95%;padding-right:20px;float:right;clear:both;">
                                
          <strong><span>EXPERIENCIA:</span></strong><br/>
                                <t t-foreach="docs.resume_line_ids" t-as="form">
                                    <t t-foreach="form" t-as="line">
                                    <!--span><t t-esc="x.line_type_id.name"/></span><br/-->
                                    <span><t t-esc="line.name"/></span><br/>
                                    <span><t t-esc="line.date_start"/></span><br/>
                                    <span><t t-esc="line.date_end"/></span><br/>
                                    <span><t t-esc="line.description"/></span><br/>
                                     </t>
                                    </t>   
                                </div>
                    
                         <div class="row" style="margin:40px auto 32px auto;width:95%;padding-right:20px;float:right;clear:both;">
                                
          <strong><span>IDIOMAS:</span></strong><br/>
                                <t t-foreach="docs.applicant_skill_ids" t-as="forms">
                                    <t t-foreach="forms" t-as="lines">
                                    <span><t t-esc="lines.skill_id.name"/></span><br/>
                                    <span><t t-esc="lines.skill_level_id.name"/></span><br/>
                                   
                                     </t>
                                    </t>   
                                </div>
                     <div class="row" style="margin:40px auto 32px auto;width:95%;padding-right:20px;float:right;clear:both;">
                                
          <strong><span>SOFTWARE:</span></strong><br/>
                                <t t-foreach="docs.applicant_skill_ids" t-as="forms">
                                    <t t-foreach="forms" t-as="lines">
                                    <span><t t-esc="lines.skill_id.name"/></span><br/>
                                    <span><t t-esc="lines.skill_level_id.name"/></span><br/>
                                   
                                     </t>
                                    </t>   
                                </div>
                                       <!--div class="row" style="margin:160px auto 32px auto;width:95%;padding-right:20px;float:right;clear:both;">
          <strong><span>HABILIDADES:</span></strong><br/>
                           <t t-foreach="docs.employee_skill_ids" t-as="skill">
        <strong><span><t t-esc="skill.skill_id.name"/></span></strong><br/>
                                </t>
                           </div-->
                      
                            <!--div class="row" style="margin:160px auto 32px auto;width:95%;padding-right:20px;float:right;clear:both;">
                                <div class="col-md-12">
          <strong><span>EXPERIENCIA:</span></strong><br/>
                                <t t-foreach="docs.resume_line_ids" t-as="line">
        <strong><span><t t-esc="line.name"/></span></strong><br/>
                                     <strong><span><t t-esc="line.date_start"/></span></strong><br/>
                                     </t>
                                   </div>    
                                </div-->

          </t>
            </div>
        </t>

    </template>
