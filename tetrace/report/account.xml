<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//address[@t-field='o.partner_id']" position="replace">
            <address>
                <span style="display:block;padding-top:30px;" class="text-uppercase" t-field="o.partner_id.name"/>
                <t t-if="o.partner_id.street">
                    <span t-field="o.partner_id.street"/> <br/>
                </t>
                <t t-if="o.partner_id.street2">
                    <span t-field="o.partner_id.street2"/> <br/>
                </t>
                <t t-if="o.partner_id.zip">
                    <span t-field="o.partner_id.zip"/>
                </t>
                <t t-if="o.partner_id.city">
                    <span t-field="o.partner_id.city"/>
                </t>
                <t t-if="o.partner_id.state_id">
                    - <span t-field="o.partner_id.state_id.name"/>
                </t>
                <t t-if="o.partner_id.zip or o.partner_id.city or o.partner_id.state_id">
                    <br/>
                </t>
                <t t-if="o.partner_id.country_id">
                    <span t-field="o.partner_id.country_id.name"/>
                </t>
            </address>
        </xpath>

        <xpath expr="//div[hasclass('page')]/h2[1]" position="replace">
            <h2>
                <span>Factura NÂº</span> <br/>
                <span t-if="o.name != '/'" t-field="o.name"/>
            </h2>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[@name='th_taxes']" position="replace">
            <th name="th_taxes"/>
        </xpath>

        <xpath expr="//span[@id='line_tax_ids']" position="replace">
            <span style="display:none" id="line_tax_ids"/>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[@name='th_quantity']" position="replace"/>

        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[@name='th_priceunit']" position="after">
            <th name="th_quantity" class="text-right"><span>Quantity</span></th>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/tbody//t[@name='account_invoice_line_accountable']//span[@t-field='line.l10n_latam_price_unit']/.." position="replace"/>

        <xpath expr="//table[@name='invoice_line_table']/tbody//t[@name='account_invoice_line_accountable']//span[@t-field='line.quantity']/.." position="before">
            <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                <span t-field="line.l10n_latam_price_unit"/>
            </td>
        </xpath>
    </template>
</odoo>
