<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="modify_reference_form">
        <field name="name">wizard.modify.reference.form.tetrace</field>
        <field name="model">modify.reference</field>
        <field name="arch" type="xml">
            <form>
                <footer>
                    <button name="modify" string="Modify" type="object" class="btn-primary"/>
                    <button string="_Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_modify_reference" model="ir.actions.act_window">
        <field name="name">Modify Reference</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">modify.reference</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            name="Modify Reference"
            parent="base.menu_ir_property"
            action="action_modify_reference"
            id="menu_modify_reference"/>
</odoo>
