<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fix_database_view_form" model="ir.ui.view">
        <field name="name">fix.database.form</field>
        <field name="model">fix.database</field>
        <field name="arch" type="xml">
            <form string="Fix Database">
                <group>
                    <field name="action"/>
                </group>
                <footer>
                    <button name="execute_action" string="Execute Action" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fix_database" model="ir.actions.act_window">
        <field name="name">Fix Database</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fix.database</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            name="Fix Database"
            parent="base.menu_ir_property"
            action="action_fix_database"
            id="menu_fix_database"/>
</odoo>
